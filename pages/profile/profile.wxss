.header {
  display: flex;
  justify-content: center;
  border-bottom: 1rpx solid #ccc;
}
.header text {
  padding: 20rpx;
  color: #999;
  font-size: 50rpx;
  text-align: center;
}

.user {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.user-avatar {
  width: 100%;
  height: 780rpx;
  margin: 40rpx;
}

.user-nickname {
  color: #aaa;
  font-size: 40rpx;
  margin-bottom: 30rpx;
  margin-left: 30rpx;
}
